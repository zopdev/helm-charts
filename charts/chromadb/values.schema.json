{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "string",
      "default": "ghcr.io/chroma-core/chroma:latest"
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m$",
              "default": "100m",
              "mutable": true
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+Gi$",
              "default": "1Gi",
              "mutable": true
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m$",
              "default": "1000m",
              "mutable": true
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+Gi$",
              "default": "2Gi",
              "mutable": true
            }
          }
        }
      }
    },
    "diskSize": {
      "type": "string",
      "pattern": "^[0-9]+Gi$",
      "default": "10Gi",
      "mutable": true,
      "editDisabled": true
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "required": ["name"]
      }
    }
  }
}