{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version"],
  "properties": {
    "version": {
      "type": "string",
      "description": "MariaDB version to deploy",
      "mutable": true,
      "default": "10.3.22-debian-10-r27"
    },
    "replication": {
      "type": "object",
      "mutable": true,
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable MariaDB replication",
          "mutable": true,
          "default": true
        }
      },
      "default": {
        "enabled": true
      }
    },
    "master": {
      "type": "object",
      "mutable": true,
      "properties": {
        "resources": {
          "type": "object",
          "mutable": true,
          "properties": {
            "requests": {
              "type": "object",
              "mutable": true,
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$",
                  "description": "CPU request for master pod",
                  "mutable": true,
                  "default": "500m"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
                  "description": "Memory request for master pod",
                  "mutable": true,
                  "default": "256M"
                }
              },
              "default": {
                "cpu": "500m",
                "memory": "256M"
              }
            },
            "limits": {
              "type": "object",
              "mutable": true,
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$",
                  "description": "CPU limit for master pod",
                  "mutable": true,
                  "default": "1500m"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
                  "description": "Memory limit for master pod",
                  "mutable": true,
                  "default": "1Gi"
                }
              },
              "default": {
                "cpu": "1500m",
                "memory": "1Gi"
              }
            }
          },
          "default": {
            "requests": {
              "cpu": "500m",
              "memory": "256M"
            },
            "limits": {
              "cpu": "1500m",
              "memory": "1Gi"
            }
          }
        },
        "persistence": {
          "type": "object",
          "mutable": true,
          "properties": {
            "size": {
              "type": "string",
              "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
              "description": "Size of the persistent volume for master",
              "mutable": true,
              "default": "10Gi"
            }
          },
          "default": {
            "size": "10Gi"
          }
        }
      },
      "default": {
        "resources": {
          "requests": {
            "cpu": "500m",
            "memory": "256M"
          },
          "limits": {
            "cpu": "1500m",
            "memory": "1Gi"
          }
        },
        "persistence": {
          "size": "10Gi"
        }
      }
    },
    "slave": {
      "type": "object",
      "mutable": true,
      "properties": {
        "replicas": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of slave replicas",
          "mutable": true,
          "default": 1
        },
        "resources": {
          "type": "object",
          "mutable": true,
          "properties": {
            "requests": {
              "type": "object",
              "mutable": true,
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$",
                  "description": "CPU request for slave pod",
                  "mutable": true,
                  "default": "500m"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
                  "description": "Memory request for slave pod",
                  "mutable": true,
                  "default": "256M"
                }
              },
              "default": {
                "cpu": "500m",
                "memory": "256M"
              }
            },
            "limits": {
              "type": "object",
              "mutable": true,
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^[0-9]+m?$",
                  "description": "CPU limit for slave pod",
                  "mutable": true,
                  "default": "1500m"
                },
                "memory": {
                  "type": "string",
                  "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
                  "description": "Memory limit for slave pod",
                  "mutable": true,
                  "default": "1Gi"
                }
              },
              "default": {
                "cpu": "1500m",
                "memory": "1Gi"
              }
            }
          },
          "default": {
            "requests": {
              "cpu": "500m",
              "memory": "256M"
            },
            "limits": {
              "cpu": "1500m",
              "memory": "1Gi"
            }
          }
        },
        "persistence": {
          "type": "object",
          "mutable": true,
          "properties": {
            "size": {
              "type": "string",
              "pattern": "^[0-9]+[KMGTPEZYkmgtpezy]i?$",
              "description": "Size of the persistent volume for slave",
              "mutable": true,
              "default": "10Gi"
            }
          },
          "default": {
            "size": "10Gi"
          }
        }
      },
      "default": {
        "replicas": 1,
        "resources": {
          "requests": {
            "cpu": "500m",
            "memory": "256M"
          },
          "limits": {
            "cpu": "1500m",
            "memory": "1Gi"
          }
        },
        "persistence": {
          "size": "10Gi"
        }
      }
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "database": {
            "type": "string"
          }
        },
        "required": ["name", "database"]
      }
    }
  }
}