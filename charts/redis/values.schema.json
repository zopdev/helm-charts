{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "diskSize": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" ,"mutable": "true"},
            "memory": { "type": "string" ,"mutable": "true"}
          },
          "required": ["cpu", "memory"]
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": { "type": "string" , "mutable": "true"},
            "memory": { "type": "string", "mutable": "true"}
          },
          "required": ["cpu", "memory"]
        }
      },
      "required": ["requests", "limits"]
    }
  },
  "required": ["diskSize", "version", "resources"],
  "services": {
    "type" : "object",
    "properties": {
      "name": {
        "type": "string"
      }
    }
  }
}
