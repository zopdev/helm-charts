{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "default": "17.4.0-debian-12-r14",
      "mutable": true
    },
    "replication": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true,
          "mutable": true
        },
        "count": {
          "type": "integer",
          "default": 1,
          "mutable": true
        }
      },
      "required": ["enabled", "count"]
    },
    "diskSize": {
      "type": "string",
      "pattern": "^[0-9]+Gi$",
      "default": "10Gi",
      "mutable": true
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m$",
              "default": "250m",
              "mutable": true
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+Mi$",
              "default": "500Mi",
              "mutable": true
            }
          },
          "required": ["cpu", "memory"]
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "pattern": "^[0-9]+m$",
              "default": "500m",
              "mutable": true
            },
            "memory": {
              "type": "string",
              "pattern": "^[0-9]+Mi$",
              "default": "1000Mi",
              "mutable": true
            }
          },
          "required": ["cpu", "memory"]
        }
      },
      "required": ["requests", "limits"]
    },
    "services": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "database": {
            "type": "string"
          }
        },
        "required": ["name", "database"]
      }
    }
  },
  "required": ["version", "replication", "diskSize", "resources"]
}