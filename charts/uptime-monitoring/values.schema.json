{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "blackbox": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "string",
          "description": "Docker image for Blackbox Exporter",
          "default": "prom/blackbox-exporter:v0.25.0"
        },
        "servicePort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Service port for Blackbox Exporter",
          "default": 9115
        }
      },
      "required": ["image", "servicePort"]
    },

    "prometheus": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "string",
          "description": "Docker image for Prometheus",
          "default": "prom/prometheus:v2.49.0"
        },
        "scrapeInterval": {
          "type": "string",
          "pattern": "^[0-9]+(s|m|h)$",
          "description": "Prometheus scrape interval (e.g. 15s, 30s, 1m)",
          "default": "30s"
        },
        "servicePort": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "description": "Service port for Prometheus",
          "default": 9090
        }
      },
      "required": ["image", "scrapeInterval", "servicePort"]
    },

    "targets": {
      "type": "array",
      "description": "List of HTTP/HTTPS targets monitored by Blackbox Exporter",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uri",
        "pattern": "^https?://"
      },
      "default": ["https://zop.dev"]
    }
  },
  "required": ["blackbox", "prometheus", "targets"]
}
